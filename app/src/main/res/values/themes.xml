<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aplikasiresepmasakan" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">#FFFFFF</item>

        <!-- Logo/icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>

        <!-- Optional duration for keeping splash -->
        <item name="postSplashScreenTheme">@style/Theme.Aplikasiresepmasakan</item>
    </style>
</resources>